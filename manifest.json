{
    "manifest_version": 3,
    "name": "Time Tracker",
    "version": "1.0",
    "permissions": ["storage"],
    "host_permissions": ["https://*.hrstop.com/*"],

    "content_scripts": [
      {
        "matches": ["https://*.hrstop.com/*"],
        "js": ["content.js"]
      }
    ],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
  }
  